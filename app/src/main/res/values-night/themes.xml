<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieDiscover" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkDark</item>
        <item name="colorAccent">@color/accentColorDark</item>
        <item name="android:windowBackground">@color/backgroundColorDark</item>
        <item name="materialButtonOutlinedStyle">@style/Custom.MaterialButton.Outlined</item>
    </style>
    <style name="Theme.MyApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MovieDiscover</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <!-- Toggle button theme -->
    <style name="Custom.MaterialButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/gray</item>
        <item name="colorOnContainerUnchecked">@color/black</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerLarge</item>
    </style>
</resources>